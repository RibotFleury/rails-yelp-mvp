<h1>My Restaurants</h1>

<ul>
<% @restaurants.each do |restaurant| %>
<div>
</div>
<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= restaurant.name %></h5>
        <p class="card-text"><%= restaurant.category %></p>
        <%= link_to "See Details", restaurant_path(restaurant), class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  </div>
<% end %>

<%= link_to "add a new restaurant", new_restaurant_path, class: "btn btn-primary" %>

</ul>
