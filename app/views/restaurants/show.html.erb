<div class="row">
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= @restaurant.name %></h5>
        <p class="card-text"><%= @restaurant.category %></p>
        <p class="card-text"><%= @restaurant.address %></p>
        <p class="card-text"><%= @restaurant.phone_number %></p>
      </div>
    </div>
  </div>
  </div>

  <p><strong>Reviews</strong></p>
  <ul class ="list-group">
  <% @restaurant.reviews.each do |review| %>

  <li class="list-group-item"> <%= review.content %></li>

  <% end %>
  </ul>

<%= link_to restaurants_path, class: "text-decoration-none" do %>
    <i class="fa-solid fa-arrow-left"></i> Go back
  <% end %>

<%= link_to new_restaurant_review_path(@restaurant), class: "text-decoration-none" do %>
    <i class="fa-solid fa-arrow-left"></i> Add a comment
  <% end %>
